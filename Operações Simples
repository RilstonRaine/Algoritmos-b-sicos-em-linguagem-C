#include <stdio.h>
#include <locale.h>

int main(){
setlocale(LC_ALL, "PORTUGUESE_BR");    
	int soma,sub,mul,div,n1,n2;
    
    printf("Insira o primeiro valor: ");
    scanf("%d",&n1);
    printf("Insira o segundo valor: ");
    scanf("%d",&n2);    
    
    soma = n1+n2;
    sub = n1-n2;
    mul = n1*n2;
    div = n1/n2;
   
    printf("=========================""\n");
    printf("Resultados""\n");
    printf("=========================""\n");
    printf("soma = " "%d\n",soma);
    printf("subtração = " "%d\n",sub);
    printf("multiplicação = ""%d\n",mul);
    printf("divisão = " "%d\n",div);
    printf("=========================""\n");
    return 0;
}

