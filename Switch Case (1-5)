#include <stdio.h>
#include <stdlib.h>
#include <locale.h>


int main() {
setlocale(LC_ALL, "PORTUGUESE_BR");


int opcao;


printf("Selecione uma opcao de 1 a 5 :");
scanf("%i",&opcao);


switch(opcao){
  case 1:
    printf("Opcao 1 selecionada\n");
            break;
  case 2:
    printf("Opcao 2 selecionada\n");
            break;
  case 3:
    printf("Opcao 3 selecionada\n");
            break;
  case 4:
    printf("Opcao 4 selecionada\n");
            break;
  case 5:
    printf("Opcao 5 selecionada\n");
            break;
    default:
            printf("Opcao invalida\n");
}
return 0;
}
